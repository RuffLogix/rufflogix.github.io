    text-decoration: underline;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin-bottom: 0.75rem;
  }

  .post-meta svg {
    width: 14px;
    height: 14px;
  }

  .post-excerpt {
