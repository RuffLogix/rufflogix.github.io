// Fetch Medium posts for featured section
const MEDIUM_URL =
  "https://api.rss2json.com/v1/api.json?rss_url=https://medium.com/feed/@rufflogix";

interface MediumPost {
  title: string;
  pubDate: string;
  guid: string;
  description: string;
}

function extractExcerpt(html: string, maxLength: number = 150): string {
  const text = html
    .replace(/<[^>]*>/g, "")
    .replace(/\s+/g, " ")
    .trim();
  return text.length > maxLength ? text.substring(0, maxLength) + "..." : text;
}

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}

function formatTime(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleTimeString("en-US", {
    hour: "2-digit",
    minute: "2-digit",
  });
}

let featuredPosts: MediumPost[] = [];
try {
  const response = await fetch(MEDIUM_URL);
  const data = await response.json();
  featuredPosts = data.items?.slice(0, 3) || [];
} catch (error) {
  console.error("Failed to fetch Medium posts:", error);
}
