---
import FormalLayout from "../../layouts/FormalLayout.astro";
import {
  educationalInformation,
  experienceInformation,
  personalInfo,
} from "../../constants/timeline.constant";
import {
  techStackData,
  achievements,
} from "../../constants/techstack.constant";
---

<FormalLayout title="About | Teejuta Sriwaranon">
  <div class="formal-container about-page">
    <header class="page-header">
      <h1>About</h1>
      <p class="page-subtitle">Background, experience, and skills</p>
    </header>

    <section class="about-section">
      <h2 class="section-title">Background</h2>
      <div class="bio-content">
        <p>
          Hi, I'm <strong>Gun (Teejuta Sriwaranon)</strong> — a Computer Engineering
          student at <a
            href="https://www.chula.ac.th/en/"
            target="_blank"
            rel="noopener noreferrer">Chulalongkorn University</a
          >
          with a deep interest in <strong>Artificial Intelligence</strong>,
          <strong>software development</strong>, and <strong
            >algorithm design</strong
          >.
        </p>
        <p>
          Through internships at industry leaders like <strong
            >LINE MAN Wongnai</strong
          >,
          <strong>Looloo Technology</strong>, <strong>AIMET</strong>, and <strong
            >KBTG</strong
          >, I've developed expertise across the full technology stack — from
          building robust APIs and deploying AI-powered applications to crafting
          smart contracts and developing wellness tech solutions.
        </p>
      </div>
    </section>

    <section class="about-section">
      <h2 class="section-title">Experience</h2>
      <div class="timeline">
        {
          experienceInformation.map((exp) => (
            <div class="timeline-item">
              <div class="timeline-header">
                <img
                  src={exp.image}
                  alt={exp.instituteName}
                  class="timeline-logo"
                  width="48"
                  height="48"
                  loading="lazy"
                />
                <div class="timeline-info">
                  <h3 class="timeline-title">
                    {exp.link ? (
                      <a
                        href={exp.link}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        {exp.instituteName}
                      </a>
                    ) : (
                      exp.instituteName
                    )}
                  </h3>
                  <p class="timeline-subtitle">{exp.program}</p>
                  <p class="timeline-meta">
                    {exp.location} • {exp.duration}
                  </p>
                </div>
              </div>
              <p class="timeline-desc">{exp.description}</p>
            </div>
          ))
        }
      </div>
    </section>

    <section class="about-section">
      <h2 class="section-title">Education</h2>
      <div class="timeline">
        {
          educationalInformation.map((edu) => (
            <div class="timeline-item">
              <div class="timeline-header">
                <img
                  src={edu.image}
                  alt={edu.instituteName}
                  class="timeline-logo object-cover"
                  width="48"
                  height="48"
                  loading="lazy"
                />
                <div class="timeline-info">
                  <h3 class="timeline-title">{edu.instituteName}</h3>
                  <p class="timeline-subtitle">{edu.program}</p>
                  <p class="timeline-meta">
                    {edu.location} • {edu.duration}
                  </p>
                </div>
              </div>
              <p class="timeline-desc">{edu.description}</p>
            </div>
          ))
        }
      </div>
    </section>

    <section class="about-section">
      <h2 class="section-title">Skills</h2>
      <div class="skills-grid">
        {
          techStackData.map((category) => (
            <div class="skill-category">
              <h3 class="skill-category-title">{category.category}</h3>
              <div class="skill-tags">
                {category.technologies.map((tech) => (
                  <span class="skill-tag">{tech.name}</span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section class="about-section" id="achievements">
      <h2 class="section-title">Achievements</h2>
      <div class="achievements-list">
        {
          achievements.map((achievement) => (
            <div class="achievement-item">
              <div class="achievement-header">
                <span class="achievement-icon">{achievement.emoji}</span>
                <div>
                  <h3 class="achievement-title">{achievement.title}</h3>
                  {achievement.year && (
                    <span class="achievement-year">{achievement.year}</span>
                  )}
                </div>
              </div>
              <p class="achievement-desc">{achievement.description}</p>
            </div>
          ))
        }
      </div>
    </section>

    <section class="about-section">
      <h2 class="section-title">Contact</h2>
      <div class="contact-info">
        <p>
          Feel free to reach out for collaborations, opportunities, or just to
          connect!
        </p>
        <div class="contact-links">
          <a href={`mailto:${personalInfo.email}`} class="contact-link">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            {personalInfo.email}
          </a>
          <a
            href={personalInfo.github}
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            GitHub
          </a>
          <a
            href="https://www.linkedin.com/in/teejuta-sriwaranon/"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </section>
  </div>
</FormalLayout>

<style>
  .about-page {
    padding-top: 2rem;
    padding-bottom: 3rem;
  }

  .page-header {
    margin-bottom: 2.5rem;
  }

  .page-header h1 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .about-section {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .about-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
  }

  .bio-content p {
    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .bio-content p:last-child {
    margin-bottom: 0;
  }

  .bio-content strong {
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .timeline-item {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .timeline-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .timeline-header {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .timeline-logo {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    object-fit: contain;
    background: var(--color-bg-secondary);
    padding: 4px;
    flex-shrink: 0;
  }

  .timeline-info {
    flex: 1;
  }

  .timeline-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
  }

  .timeline-title a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .timeline-title a:hover {
    text-decoration: underline;
  }

  .timeline-subtitle {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.25rem;
  }

  .timeline-meta {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .timeline-desc {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-left: calc(48px + 1rem);
  }

  .skills-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .skill-category-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    font-size: 0.75rem;
    padding: 0.375rem 0.75rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-text-secondary);
    transition: all 150ms ease;
  }

  .skill-tag:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .achievements-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .achievement-item {
    padding: 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .achievement-header {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
    margin-bottom: 0.5rem;
  }

  .achievement-icon {
    font-size: 1.25rem;
  }

  .achievement-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-primary);
  }

  .achievement-year {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .achievement-desc {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin-left: calc(1.25rem + 0.75rem);
  }

  .contact-info p {
    margin-bottom: 1rem;
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 150ms ease;
  }

  .contact-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .timeline-desc {
      margin-left: 0;
      margin-top: 0.75rem;
    }
  }
</style>
