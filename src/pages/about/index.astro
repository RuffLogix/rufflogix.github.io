---
import Layout from "../../layouts/Layout.astro";
import ScrollAnimations from "../../components/ScrollAnimations.astro";
import { Image } from "astro:assets";
import {
  educationalInformation,
  experienceInformation,
} from "../../constants/timeline.constant.ts";
---

<Layout>
  <div class="min-h-screen bg-gray-900 text-white py-12 px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="max-w-7xl mx-auto mb-16">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-center mb-4">
        Teejuta Sriwaranon
      </h1>
      <style>
        a[target="_blank"]:hover {
          box-shadow: 0 4px 16px 0 rgba(16, 185, 129, 0.25);
          border-color: #34d399;
          transition:
            box-shadow 0.2s,
            border-color 0.2s;
        }
      </style>
      <p class="text-lg sm:text-xl text-gray-400 text-center">
        My Journey & Experience
      </p>

      <div
        class="flex flex-col md:flex-row mt-8 gap-8 md:gap-12 items-center md:items-start"
      >
        <Image
          src="/images/profile.jpg"
          alt="Teejuta Sriwaranon Profile Picture"
          width={256}
          height={256}
          class="w-48 h-48 md:w-64 md:h-64 object-cover rounded-lg shadow-lg flex-shrink-0"
        />
        <section id="about" class="w-full max-w-4xl text-gray-200 space-y-8">
          <h2
            class="text-3xl font-bold mb-6 text-emerald-300 text-center md:text-left"
          >
            About Me
          </h2>
          <p class="mb-4">
            Hi, I'm <span class="font-semibold text-emerald-300"
              >Teejuta Sriwaranon (Gun)</span
            > â€” a junior Computer Engineering student at{" "}
            <span class="font-semibold text-white"
              >Chulalongkorn University</span
            > with a strong passion for{" "}
            <span class="text-emerald-300 font-medium"
              >Artificial Intelligence</span
            >,{" "}
            <span class="text-emerald-300 font-medium"
              >software development</span
            >, and the{" "}
            <span class="text-emerald-300 font-medium"
              >mathematics behind algorithms</span
            >.
          </p>
          <p class="mb-4">
            Iâ€™ve gained hands-on experience through internships and part-time
            roles at companies like{" "}
            <span class="font-medium text-white">LINE MAN Wongnai</span>,{" "}
            <span class="font-medium text-white">Looloo Technology</span>,{" "}
            <span class="font-medium text-white">AIMET</span>, and{" "}
            <span class="font-medium text-white"
              >Kasikorn Business-Technology Group</span
            >.
          </p>
          <p class="mb-4">
            My work spans building robust APIs, deploying AI-powered
            applications, crafting smart contracts, and contributing to wellness
            tech solutions for medical students.
          </p>
          <ul class="list-disc list-inside mb-4 space-y-2">
            <li>
              ðŸ¥ˆ Silver Medal at <span class="font-medium text-white"
                >iGEM 2024</span
              >
            </li>
            <li>
              ðŸ¥ˆ Silver Medal in <span class="font-medium text-white"
                >Super AI Engineer Season 3</span
              >
            </li>
            <li>
              ðŸ¥ˆ Silver Medal at the <span class="font-medium text-white"
                >17th Thailand Olympiad in Informatics</span
              >
            </li>
          </ul>
          <p>
            I love combining theory with practice and exploring new
            technologies.
          </p>
        </section>
      </div>
    </div>

    <!-- Education Timeline -->
    <div class="max-w-4xl mx-auto mb-20">
      <h2
        class="text-4xl font-bold mb-12 text-emerald-400"
        data-animation="education-header"
      >
        Education
      </h2>
      <div class="relative" data-animation="education-timeline">
        <div
          class="absolute left-4 sm:left-6 top-0 bottom-0 w-0.5 bg-emerald-600"
        >
        </div>
        <div class="space-y-12">
          {
            educationalInformation.map((edu) => (
              <div class="relative flex items-start">
                <div class="timeline-dot absolute left-2 sm:left-4 w-4 h-4 bg-emerald-600 rounded-full border-4 border-gray-900 z-10" />
                <div class="ml-12 sm:ml-20 w-full">
                  <div class="timeline-card bg-gray-800 border border-gray-700 rounded-lg p-4 sm:p-6 shadow-lg hover:shadow-xl transition-shadow">
                    <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                      <div class="flex items-start gap-4">
                        {edu.image && (
                          <Image
                            src={edu.image}
                            alt={`${edu.instituteName} logo`}
                            width={64}
                            height={64}
                            class="w-12 h-12 sm:w-16 sm:h-16 rounded-lg object-cover flex-shrink-0 border-2 border-gray-600"
                          />
                        )}
                        <div>
                          <h3 class="text-xl sm:text-2xl font-bold text-white mb-2">
                            {edu.instituteName}
                          </h3>
                          <p class="text-emerald-400 font-semibold mb-1">
                            {edu.program}
                          </p>
                          <p class="text-gray-400 text-sm">{edu.location}</p>
                        </div>
                      </div>
                      <span class="inline-block bg-emerald-600 text-white px-3 py-1 rounded-full text-sm font-medium mt-4 md:mt-0">
                        {edu.duration}
                      </span>
                    </div>
                    <p class="text-gray-300 leading-relaxed">
                      {edu.description}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Experience Timeline -->
    <div class="max-w-4xl mx-auto mb-20">
      <h2
        class="text-4xl font-bold mb-12 text-emerald-400"
        data-animation="experience-header"
      >
        Experience
      </h2>
      <div class="relative" data-animation="experience-timeline">
        <div
          class="absolute left-4 sm:left-6 top-0 bottom-0 w-0.5 bg-emerald-600"
        >
        </div>
        <div class="space-y-12">
          {
            experienceInformation.map((exp) => (
              <div class="relative flex items-start">
                <div class="timeline-dot absolute left-2 sm:left-4 w-4 h-4 bg-emerald-600 rounded-full border-4 border-gray-900 z-10" />
                <div class="ml-12 sm:ml-20 w-full">
                  <div class="timeline-card bg-gray-800 border border-gray-700 rounded-lg p-4 sm:p-6 shadow-lg hover:shadow-xl transition-shadow">
                    <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                      <div class="flex items-start gap-4">
                        {exp.image && (
                          <a
                            href={exp.link}
                            target="_blank"
                            rel="noopener noreferrer"
                          >
                            <Image
                              src={exp.image}
                              alt={`${exp.instituteName} logo`}
                              width={64}
                              height={64}
                              class="w-12 h-12 sm:w-16 sm:h-16 rounded-lg object-cover flex-shrink-0 border-2 border-gray-600"
                            />
                          </a>
                        )}
                        <div>
                          <h3 class="text-xl sm:text-2xl font-bold text-white mb-2">
                            {exp.instituteName}
                          </h3>
                          <p class="text-emerald-400 font-semibold mb-1">
                            {exp.program}
                          </p>
                          <p class="text-gray-400 text-sm">{exp.location}</p>
                        </div>
                      </div>
                      <span class="inline-block bg-emerald-600 text-white px-3 py-1 rounded-full text-sm font-medium mt-4 md:mt-0">
                        {exp.duration}
                      </span>
                    </div>
                    <p class="text-gray-300 leading-relaxed">
                      {exp.description}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <ScrollAnimations />
</Layout>
