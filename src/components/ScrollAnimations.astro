---
// ScrollAnimations.astro - GSAP initialization component for Astro
---

<script>
  // Import GSAP initialization on client-side only
  import { GSAPManager } from "../scripts/gsap-init.ts";

  // Initialize GSAP when component mounts
  const manager = GSAPManager.getInstance();

  // Ensure initialization happens after Astro hydration
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", async () => {
      await manager.initialize();
    });
  } else {
    manager.initialize();
  }
</script>
