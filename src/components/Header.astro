---
import { SECONDARY_BACKGROUND_COLOR, PRIMARY_TEXT_COLOR } from "../const";

type Link = {
    href: string
    text: string
}

const links: Link[] = [
    { href: '/', text: 'Home' },
    { href: '/about', text: 'About' },
    { href: '/blog', text: 'Blog' },
]
---

<div class=`flex justify-center py-8 ${SECONDARY_BACKGROUND_COLOR}`>
    <div class="flex gap-8">
        {
            links.map((link) => (
                <a href={link.href} class=`text-lg font-medium hover:${PRIMARY_TEXT_COLOR}`>{link.text}</a>
            ))
        }
    </div>
</div>
