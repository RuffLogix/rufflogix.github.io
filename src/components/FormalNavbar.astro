---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: "/articles", label: "Posts" },
  { href: "/projects", label: "Projects" },
  { href: "/about", label: "About" },
];
---

<header class="formal-container">
  <nav class="formal-header" role="navigation" aria-label="Main navigation">
    <a href="/" class="formal-logo">Teejuta Sriwaranon</a>

    <div class="formal-nav">
      {
        navItems.map((item) => {
          const isActive =
            currentPath === item.href ||
            (item.href !== "/" && currentPath.startsWith(item.href));

          return (
            <a
              href={item.href}
              class:list={[{ "formal-nav-active": isActive }]}
              aria-current={isActive ? "page" : undefined}
            >
              {item.label}
            </a>
          );
        })
      }

      <div class="formal-nav-icons">
        <!-- Theme toggle -->
        <button
          id="theme-toggle"
          aria-label="Toggle theme"
          title="Toggle theme"
          class="theme-toggle-btn"
        >
          <!-- Sun icon (light mode) -->
          <svg
            class="sun-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <!-- Moon icon (dark mode) -->
          <svg
            class="moon-icon hidden"
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<style>
  .formal-nav-active {
    color: var(--color-text-primary) !important;
  }

  .theme-toggle-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text-muted);
    padding: 0.25rem;
    display: flex;
    align-items: center;
    transition: color 150ms ease;
  }

  .theme-toggle-btn:hover {
    color: var(--color-text-primary);
  }

  .moon-icon {
    display: none;
  }

  [data-theme="light"] .sun-icon {
    display: none;
  }

  [data-theme="light"] .moon-icon {
    display: block;
  }
</style>
