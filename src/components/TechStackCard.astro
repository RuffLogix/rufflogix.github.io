---
import type { TechStack } from "../constants/techstack.constant";

export interface Props {
  key: number;
  category: TechStack;
}

const { category } = Astro.props;
---

<div
  class="bg-gray-800 border border-gray-700 rounded-lg p-4 sm:p-6 shadow-lg hover:shadow-xl transition-shadow"
  data-animation="techstack-card"
>
  <h3 class="text-xl sm:text-2xl font-bold text-white mb-4 text-center">
    {category.category}
  </h3>

  <div class="space-y-3">
    {
      category.technologies.map((tech) => (
        <div class="flex items-center justify-between p-3 bg-gray-700/50 rounded-lg hover:bg-gray-700 transition-colors">
          <div class="flex items-center gap-3">
            <span class="text-xl" role="img" aria-label={tech.name}>
              {tech.icon}
            </span>
            <div>
              <h4 class="font-medium text-white">{tech.name}</h4>
              {tech.description && (
                <p class="text-xs text-gray-400 mt-1">{tech.description}</p>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
