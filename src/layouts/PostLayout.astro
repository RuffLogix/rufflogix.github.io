---
import BaseLayout from "./BaseLayout.astro";
import { GITHUB_URL } from "../const";
import { formatDate } from "../services/utils";
import { PRIMARY_TEXT_COLOR, SECONDARY_BACKGROUND_COLOR, PRIMARY_BACKGROUND_COLOR } from "../const";
const { frontmatter } = Astro.props;

const title = frontmatter.title + " - RuffLogix";
const date = formatDate(frontmatter.date);
---

<BaseLayout
    title={title}
    description={frontmatter.description}
    image={frontmatter.image.url}
>
    <article
        class="py-10 bg-white w-full flex flex-col justify-center items-center"
    >
        <div class="flex flex-col justify-center items-center gap-2">
            <h1 class="text-3xl font-bold">{frontmatter.title}</h1>
            <p class="text-center">{frontmatter.description}</p>
            <p class="text-sm">
                Written by <a
                    class=`font-bold underline ${PRIMARY_TEXT_COLOR}`
                    href={GITHUB_URL}>{frontmatter.author}</a
                > on {date}
            </p>
            <div class="flex gap-1">
                {
                    frontmatter.tags.map((tag: string) => (
                        <span class=`px-3 py-1 font-normal ${SECONDARY_BACKGROUND_COLOR} hover:${PRIMARY_BACKGROUND_COLOR} hover:cursor-default duration-300 rounded-full text-xs`>
                            # {tag}
                        </span>
                    ))
                }
            </div>
        </div>
        <img
            class="py-5"
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
            draggable="false"
        />
        <div
            id="page-content"
            class="prose py-5 w-[400px] md:w-full px-3 md:px-0"
        >
            <slot />
        </div>
    </article>
</BaseLayout>
