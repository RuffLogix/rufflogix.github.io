---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
const { title } = Astro.props;
---

<html lang="en">
    <head> 
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta name="description" content="RuffLogix's personal blog"/>
        <meta name="keywords" content="RuffLogix, blog, personal, learn, code, game"/>
        <meta name="author" content="RuffLogix"/>
        <title>{title}</title>
    </head>
    <body class="font-light">
        <Header/>
        <div class="h-min-screen w-full flex justify-center bg-orange-50">
            <div class="w-full max-w-[720px]">
                <slot/> 
            </div>
        </div>
        <Footer/>
    </body>
</html>
