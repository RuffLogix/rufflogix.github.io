---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
const description = Astro.props.description || "RuffLogix's personal blog";
const image =
    (Astro.props.image as string).replace(
        "../../",
        "https://rufflogix.github.io/",
    ) || "https://rufflogix.com/images/rufflogix512.png";
const author = "RuffLogix";
const twitterHandle = "@RuffLogix";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta
            name="keywords"
            content="RuffLogix, blog, personal, learn, code, game"
        />
        <meta name="author" content={author} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={image} />
        <meta property="og:type" content="website" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={image} />
        <meta name="twitter:site" content={twitterHandle} />
        <meta name="twitter:creator" content={twitterHandle} />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css"
        />
        <title>{title}</title>
    </head>
    <body class="font-light">
        <Header />
        <div class="h-min-screen w-full flex justify-center bg-orange-50">
            <div class="w-full md:max-w-[720px]">
                <slot />
            </div>
        </div>
        <Footer />
    </body>
</html>
